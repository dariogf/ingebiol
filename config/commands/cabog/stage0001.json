# autocomplete_values:['uno','dos','tres']
}
,
 {
	input_type: 'separator'
 }
,
 {
	input_type: 'file',
	id:'fasta_file454',
	save_as:'fasta.pname',
	title:'Sequences 454  (fasta)',
	default_value: '',
	required: true,
	tooltip:'Select a sequence file in fasta format'
 }
,
{
	input_type: 'file',
	id:'qual_file454',
	save_as:'qual.pname',
	title:'Qualities 454 (fasta)',
	default_value: '',
	required: true,
	tooltip:'Select a sequence file in fasta format'
}
,
{
input_type: 'file',
id:'xml_file454',
	save_as:'xml.pname',
