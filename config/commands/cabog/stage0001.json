	values: {'Unitigger':'utg',
					 'Best Over Graph':'bog'}
					,
	required: true,
	tooltip:'Un tip'
 }
,
{
	input_type: 'integer',
	id:'a',
	command_switch:'-utgGenomeSize=%s',
	title:'Genome Size (bp)',
	required: true,
	tooltip:'un tooltip',
	default_value: '1000',
	validation_lower_limit:'1',
	validation_upper_limit:'23000'
}
,
  {
	input_type: 'checkbox',
	id:'checkbox1',
	command_switch:'-createACE=1',
	title:'Create ACE',
	title_pos:'right',
	default_value: 'false',
	required: false,
	tooltip:'The job is assigned a number automatically, but if you can provide a custom name for it'
 }
,
  {
	input_type: 'checkbox',
	id:'checkbox1',
	command_switch:'-createAGP=1',
	title:'Create AGP',
